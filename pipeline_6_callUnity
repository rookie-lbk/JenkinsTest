					// //然后使用gradle 命令
				// bat label:'',script:"""
					// cd PipeTest
					// gradle clean
				
				// """
			// }
		// }
		
		// stage("Release APK"){
			
			// steps{
					// //切换到工程目录
					// //然后使用gradle 命令
				// bat label:'',script:"""
					// cd PipeTest
					// gradle assembleRelease
				
				// """
			// }
